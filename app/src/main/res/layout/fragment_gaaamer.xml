<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:background="@drawable/bbbackg"
    android:layout_height="match_parent"
    tools:context=".GaaamerFragment">


    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gttggtgttgtg"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.30" />




    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/gthykokhyyh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.05" />



    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fgtkgtkgtogtk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.13" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hokkyhokhykhyk"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/hykhykohykyh"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.95" />

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/fjguthgtuhgtht"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.05" />

    <ImageView
        android:id="@+id/img_enemy"
        android:layout_width="200dp"
        app:layout_constraintVertical_chainStyle="packed"
        android:layout_height="200dp"
        android:scaleType="centerInside"
        android:src="@drawable/img"
        app:layout_constraintStart_toStartOf="@id/fjguthgtuhgtht"
        app:layout_constraintEnd_toEndOf="@id/hykhykohykyh"
        app:layout_constraintTop_toTopOf="@id/gthykokhyyh"/>


    <ProgressBar
        android:id="@+id/prog_bar_halth"
        style="?android:attr/progressBarStyleHorizontal"
        android:layout_width="0dp"
        android:layout_height="10dp"
        android:layout_marginTop="8dp"
        android:progressDrawable="@drawable/custom_prog_bar"
        app:layout_constraintEnd_toEndOf="@id/hykhykohykyh"
        app:layout_constraintStart_toStartOf="@id/fjguthgtuhgtht"
        app:layout_constraintTop_toBottomOf="@id/img_enemy"
        tools:progress="50" />

    <ImageView
        android:id="@+id/img_left"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/target"
        app:layout_constraintBottom_toBottomOf="@id/hokkyhokhykhyk"
        app:layout_constraintEnd_toStartOf="@id/img_right"
        app:layout_constraintStart_toStartOf="@id/fjguthgtuhgtht"
        app:layout_constraintTop_toBottomOf="@id/prog_bar_halth" />

    <ImageView
        android:id="@+id/img_right"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:scaleType="centerInside"
        android:src="@drawable/target"
        app:layout_constraintBottom_toBottomOf="@id/hokkyhokhykhyk"
        app:layout_constraintEnd_toEndOf="@id/hykhykohykyh"
        app:layout_constraintStart_toEndOf="@id/img_left"
        app:layout_constraintTop_toBottomOf="@id/prog_bar_halth"  />

    <ImageView
        android:id="@+id/img_top"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/target"
        app:layout_constraintBottom_toTopOf="@id/img_left"
        app:layout_constraintEnd_toEndOf="@id/hykhykohykyh"
        app:layout_constraintStart_toStartOf="@id/fjguthgtuhgtht" />


    <ImageView
        android:id="@+id/img_dovn"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_marginTop="16dp"
        android:scaleType="centerInside"
        android:src="@drawable/target"
        app:layout_constraintEnd_toEndOf="@id/hykhykohykyh"
        app:layout_constraintStart_toStartOf="@id/fjguthgtuhgtht"
        app:layout_constraintTop_toBottomOf="@id/img_left" />


    <androidx.appcompat.widget.AppCompatTextView
        android:id="@+id/tv_title_rules"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="@font/montserrat_black"
        android:gravity="center"
        android:textSize="22sp"
        android:text="press to make damage"
        android:textAllCaps="true"
        android:textColor="#F8CFCF"
        android:layout_marginTop="16dp"
        app:layout_constraintStart_toStartOf="@id/fjguthgtuhgtht"
        app:layout_constraintEnd_toEndOf="@id/hykhykohykyh"
        app:layout_constraintTop_toBottomOf="@id/img_dovn"/>


</androidx.constraintlayout.widget.ConstraintLayout>